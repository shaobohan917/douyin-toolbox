FROM python:3.11-alpine

WORKDIR /app

# Clear proxy environment variables
ENV http_proxy=
ENV https_proxy=
ENV HTTP_PROXY=
ENV HTTPS_PROXY=
ENV no_proxy=*

COPY backend/douyin-mcp-server/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY backend/douyin-mcp-server/ .

EXPOSE 8001

CMD ["python", "server.py"]
